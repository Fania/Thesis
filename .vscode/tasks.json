{
    // See http://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
	// pdflatex --file-line-error -shell-escape main
    "version": "2.0.0",
    "command": "cmd",
    "args": [
        "/c"
    ],
    "tasks": [
      {
        "label": "pdflatex",
        "type": "shell",
        "command": "cmd",
        "args": [
          "/c",
          "pdflatex",
          "--file-line-error",
          "-shell-escape",
          "main"
        ],
        "problemMatcher": "$msCompile",
        "group": {
          "_id": "build",
          "isDefault": false
        }
      },
      {
        "label": "biber",
        "type": "shell",
        "command": "cmd",
        "args": [
          "/c",
          "biber",
          "main"
        ],
        "problemMatcher": "$msCompile"
      },
      {
        "label": "test",
        "type": "shell",
        "command": "cmd",
        "args": [
          "/c",
          "pdflatex",
          "--file-line-error",
          "-shell-escape",
          "test"
        ],
        "problemMatcher": "$msCompile",
        "group": {
          "_id": "test",
          "isDefault": false
        }
      }
    ]
}
